@using Entity.ViewModels
@model HomeViewModel

@section CSS{



    <link href="~/Content/assets/owl.carousel.min.css" rel="stylesheet" />
    <link href="~/Content/assets/owl.theme.default.min.css" rel="stylesheet" />
}
@section scripts{

    <script src="~/Content/owl.carousel.min.js"></script>

    <script>
        var owl = $('.owl-carousel');
        owl.owlCarousel({
            items: 1,
            loop: true,
            margin: 10,
            autoplay: true,
            autoplayTimeout: 2000,
            autoplayHoverPause: true
        });
    </script>


}
<div class="text-center">

    <div class="owl-carousel owl-theme">

        @foreach (var item in Model.Sliders)
        {
            <div class="item">
                <img src="@item.LargeImageUrl" style="width:1500px;height:800px;margin-left:50px" />
            </div>

        }
    </div>

</div>